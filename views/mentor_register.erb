<!--HTML registration page for mentors-->

<!DOCTYPE html>
<%= erb :"common/header" %>
<body id="Welcome Page">      

    <main>
        <%= h @message %>
        <form method="post" action="/post-mentor-register">
            <%= erb :"common/title" %>
            <br>
            <%= erb :"common/industrySector" %>
            <p><label>Description Of Yourself: </label> </p>
            <p>
                <textarea id="descriptionBox" name="description" rows="8" cols="100"> </textarea>
            </p>
          <p><label>Available Time:</label></p>
          <p>
            <input type="text" name="available_Time" id="available_Time"
                   maxlength="50" size="30" required>
          </p>
            <input type="submit" value="Submit">
        </form>
    </main>
</body>
<%= erb :"common/footer" %>