<!DOCTYPE html>
<%= erb :"common/header_loggedin" %>
<body id="Make Report">

<main>
  <h2>Reports Below</h2>
  <% if  @reports.empty? %>
    <p>Sorry no reports found</p>
  <% else %>
    <table class = "centerTable" border="1">
      <tr  id = "reportTable">
        <th>ID of creator</th>
        <th>Name/ Email of offender</th>
        <th>Time/Date Made</th>
        <th>Action</th>
      </tr>
      <% @reports.each do |report| %>
        <tr>
          <td><%= h report.user_id %></td>
          <td><%= h report.identifier %></td>
          <td><%= h report.get_time %></td>
          <td><a href="/view-report-detail?id=<%= h report.id %>">View More</a></td>
        </tr>
      <% end %>
    </table>
  <% end %>


</main>
</body>
<%= erb :"common/footer" %>